    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Outfit:wght@400;900&family=Playfair+Display:ital,wght@1,700&family=Roboto+Condensed:wght@700&display=swap');
        
        body { font-family: 'Outfit', sans-serif; background: #000; color: white; margin: 0; overflow: hidden; }
        .bebas { font-family: 'Bebas Neue', cursive; }
        .stylish { font-family: 'Playfair Display', serif; font-style: italic; }
        .condensed { font-family: 'Roboto Condensed', sans-serif; }

        .video-box {
            position: relative;
            width: 100%;
            aspect-ratio: 9/16;
            background: #0a0a0a;
